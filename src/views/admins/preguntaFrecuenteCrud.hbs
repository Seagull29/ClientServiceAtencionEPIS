{{>adminCrudMenu}}
<div class="crud-container">
    <div class="crud__forms">
        <h2 class="crud__title">Pregunta Frecuente</h2>
        <form class="form" method="post" action="/admin/agregar-preguntaFrecuente" id="form-preguntaFrecuenteCrud">
            <div class="form__grupo">
                <label class="form__etiqueta" for="encabezado">Id:</label>
                <input class="form__input" type="text" name="txtId" placeholder=" " id="txtId">
                <span></span>
            </div>
            <div class="form__grupo">
                <label class="form__etiqueta" for="encabezado">Pregunta:</label>
                <input class="form__input" type="text" name="txtPregunta" placeholder=" " id="txtPregunta">
                <span></span>
            </div>
            <div class="form__grupo">
                <label class="form__etiqueta" for="encabezado">Respuesta:</label>
                <input class="form__input" type="text" name="txtRespuesta" placeholder=" " id="txtRespuesta">
                <span></span>
            </div>
            <div class="form__buttons">
                <button type="submit" class="form__button form__button--add">Agregar</button>
                <button type="submit"class="form__button form__button--update" formaction="/admin/actualizar-preguntaFrecuente">Actualizar</button>
            </div>
        </form>
        <button class="form__button form__button--listar" id="btnListarPreguntaFrecuente">Listar</button>
        <div id="error-container" class="error-container"></div>
        <form class="form" method="post" action="/admin/eliminar-preguntaFrecuente" id="form-eliminar">
            <div class="form__grupo">
                <label class="form__etiqueta" for="encabezado">Eliminar</label>
                <select class="form__input form__input--select" name="txtId" id="txtIdEliminar">
                    <option disabled selected value="">Seleccione un id</option>
                    {{#each identificadores}}
                    <option>{{Id}}</option>
                    {{/each}}
                </select>
                <span></span>
            </div>
            <button type="submit" class="form__button form__button--delete">Eliminar</button>
        </form>
    </div>
    <div class="crud__tables">
        <table class="table-data">
                <thead class="table__head">
                    <tr class="table__row">
                        <th class="table__header">No.</th>
                        <th class="table__header">Id</th>
                        <th class="table__header">Pregunta</th>
                        <th class="table__header">Respuesta</th>
                    </tr>
                </thead>
                <tbody class="table__body" id="body-table">
                    
                </tbody>
        </table>
    </div>
</div>