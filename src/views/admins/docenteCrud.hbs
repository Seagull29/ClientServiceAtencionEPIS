                        <th class="table__header">CodigoUAC</th>
                        <th class="table__header">Nombre</th>
                        <th class="table__header">Apellidos</th>
                        <th class="table__header">Celular</th>
                    </tr>
                </thead>
                <tbody class="table__body" id="body-table">
                    
                </tbody>
        </table>
