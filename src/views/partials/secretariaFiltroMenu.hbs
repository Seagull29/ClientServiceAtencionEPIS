<div class="filtro-container">

    <div class="filtro__grupo">
        <select class="filtro__select" name="categoria" id="filtro-categoria-secretaria">
            <option selected disabled>Seleccione la categoria</option>
            {{#each categorias}}
            <option>{{Nombre}}</option>
            {{/each}}
        </select>

    </div>
    <div class="filtro__grupo">
        <select class="filtro__select" name="prioridad" id="filtro-prioridad-secretaria">
            <option selected disabled>Seleccione la prioridad</option>
            {{#each prioridades}}
            <option>{{Nombre}}</option>
            {{/each}}
        </select>
    </div>
    <div class="filtro__grupo">
        <select class="filtro__select" name="tipo" id="filtro-tipo-secretaria">
            <option selected disabled>Seleccione el tipo</option>
            {{#each tipos}}
            <option>{{Nombre}}</option>
            {{/each}}
        </select>
    </div>
    <div class="filtro__grupo">
        <button class="filtro__boton" id="btnSecretariaEnviado">
            <span>
                <i></i>
            </span>
            <span class="filtro__nombre">Enviado</span>
        </button>
    </div>
    <div class="filtro__grupo">
        <button class="filtro__boton" id="btnSecretariaProceso">
            <span>
                <i></i>
            </span>
            <span class="filtro__nombre">En proceso</span>
        </button>
    </div>
    <div class="filtro__grupo">
        <button class="filtro__boton" id="btnSecretariaAtendido">
            <span>
                <i></i>
            </span>
            <span class="filtro__nombre">Atendido</span>
        </button>
    </div>
</div>