{
    "compilerOptions": {
        "target": "ES2021",
        "allowJs": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": false,
        "types": ["node"],  
        "moduleResolution": "node",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@models/*": ["models/*"],
            "@config/*": ["config/*"],
            "@routes/*": ["routes/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    
}